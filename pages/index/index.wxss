/* pages/index/index.wxss */
.photo{
  display: block;
  width: 120%;
  /* margin-left: auto; */
  /* margin-right: auto; */
  position: fixed;
  bottom: 0;
  /* text-align: center; */
  /* right: 0; */
}
.cover-info{
  position: absolute;
  left: 50px;
  top: 30px;
}
.cover-name{
  font-size: 1.5rem;
  font-weight: bold;
  letter-spacing: 1px;
  display: block;
}
.cover-spell{
  font-size: 1rem;
  letter-spacing: 1px;
}
.big-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width:260px;
  height:260px;
  border-radius: 130px;
  position: absolute;
  left: -150px;
  top: 110px;
}
.middle-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width:160px;
  height:160px;
  border-radius: 80px;
  position: absolute;
  right: -80px;
  top: 110px;
}
.small-circle{
  background-color: rgba(0, 165, 34, 0.7);
  width:50px;
  height:50px;
  border-radius: 25px;
  position: absolute;
  left: -10px;
  bottom: 50px;
}
.cover-work{
  position: absolute;
  bottom: 100px;
  text-align: center;
  background-color: rgb(0, 0, 0,0.4);
  padding: 20px 0;
  width: 100%;
}
.cover-job{
  display: block;
  color: #fff;
  font-size: 30px;
  font-weight: bold;

}

.cover-exp{
  display: block;
  color: #fff;
  font-size: 20px;

}
.navigation{
  position: absolute;
  color: rgb(0, 0, 0,0.5);
  top: 40px;
  right: 10px;
  font-size: 18px;
}
.arrow-right{
  width: 20px;
  height: 20px;
  vertical-align: -5px;
}
.resume{
  margin: 0 20px;
}
.section{
  padding-bottom: 10px;

}
.section-info{
  display: flex;
  border-bottom: 1px solid #333;
  padding-bottom: 5px;
  margin: 10px 0;
}
.section-seq{
  background-color: #444;
  width: 22px;
  height: 22px;
  color: #fff;
  text-align: center;
  line-height: 22px;
  margin-right: 10px;
  font-weight: bold;
}
.section-title{
  font-style: 20px;

}
.column{
  font-style: 16px;
  border-bottom: dashed 1px #333;
  padding: 6px 0;
}
.col-2{
  column-count: 2; /*依赖block类型*/
}
.col-1{

}
.info{
  display: block;
}
.skill{
  padding: 5px 0;
}
.skill-name{
  font-size: 16px;
  display: block;  /*这个必须要加*/
  margin-bottom: 5px;
}

.education, .work, .project, .introduction{
  border-bottom: dashed 1px #999;
  padding: 10px 0;
}
.education:last-child{
  border-bottom:none;
}
.work:last-child{
  border-bottom:none;
}
.project:last-child{
  border-bottom:none;
}
.introduction:last-child{
  border-bottom:none;
}
.school, .company, .project-name{
  /* font-size: 18px; */
  /* font-weight: bold; */
  margin-bottom: 10px;
}
.icon-school{
  width: 26px;
  height: 26px;
  vertical-align: -7px;
  margin-right: 5px;
}

.row{
  display: flex;
  justify-content: space-between;

}
.info{
  /* font-size: 16px; */

}
.icon-calendar{
  width: 17px;
  height: 17px;
  vertical-align: -2px;
  margin-right: 3px;
}
.icon-book{
  width: 16px;
  height: 16px;
  vertical-align: -2px;
  margin-right: 3px;
}
.desc{
  margin-top: 10px;
  color: #999;
  line-height: 1.5;
}
.page{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 16px;
  padding-bottom: 15px;

}
.icon-company{
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 5px;
}
.icon-job{
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 3px;
}
.icon-computer{
  width: 26px;
  height: 26px;
  vertical-align: -6px;
  margin-right: 5px;
}
